    "webtorrent": "^0.98.21",
    "webtorrent-hybrid": "^1.0.6"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.5",
    "esdoc": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "marked": "0.3.9",
    "mocha": "^5.0.0",
